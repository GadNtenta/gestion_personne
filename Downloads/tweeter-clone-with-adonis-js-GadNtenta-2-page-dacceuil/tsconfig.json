
{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./",
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      "@ioc:Adonis/*": ["node_modules/@adonisjs/*"]
    }
  }
}


