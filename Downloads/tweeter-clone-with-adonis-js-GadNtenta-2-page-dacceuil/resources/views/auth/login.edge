      <h1 class="text-white text-3xl font-bold mb-8">
        Connectez-vous
      </h1>

      @if(flashMessages.has('errors'))
        <div class="bg-red-900/50 text-red-400 p-3 rounded-md mb-4">
          <ul>
            @each(error in flashMessages.get('errors'))
              <li>
                {{ error }}
              </li>
            @end
          </ul>
        </div>
      @endif
      
      @if(flashMessages.has('error'))
        <div class="bg-red-900/50 text-red-400 p-3 rounded-md mb-4">
          {{ flashMessages.get('error') }}
        </div>
      @endif
      
      <form
        action="{{ route('auth.login') }}"
        method="POST"
        id="loginForm"
        enctype="application/x-www-form-urlencoded"
      >
        {{ csrfField() }}
        <div class="mb-4">
          <label for="email" class="block text-sm font-medium text-gray-300 mb-1">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Email"
            value="{{ flashMessages.get('email', '') }}"
            required
            class="w-full bg-black text-white border border-gray-700 rounded-md p-4 focus:outline-none focus:border-blue-500"
          />
        </div>

        <div class="mb-6">
          <label for="password" class="block text-sm font-medium text-gray-300 mb-1">Mot de passe</label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Mot de passe"
            required
            minlength="8"
            class="w-full bg-black text-white border border-gray-700 rounded-md p-4 focus:outline-none focus:border-blue-500"
          />
        </div>

        <button
          type="submit"
          class="w-full bg-white text-black font-bold py-3 px-4 rounded-full hover:bg-gray-200 transition"
        >
          Se connecter
        </button>
      </form>

      <script>
        document.getElementById("loginForm").addEventListener("submit", function(e) {
          const formData = new FormData(this);
          const email = formData.get("email");
          const password = formData.get("password");
          console.log("Tentative de connexion avec:", {
            email: email,
            password: password ? "[PRÃ‰SENT]" : "[ABSENT]",
            formData: Object.fromEntries(formData)
          });
          if (!email || !password) {
            e.preventDefault();
            alert("Veuillez remplir tous les champs");
            return;
          }
        });
      </script>

      <div class="mt-6 text-center">
        <p class="text-gray-500">
          Vous n'avez pas de compte ?
        <a href="{{ route('auth.registerShow') }}" class="text-blue-500 hover:underline">Inscrivez-vous</a>
        </p>
      </div>
    </div>
  </body>
</html>

